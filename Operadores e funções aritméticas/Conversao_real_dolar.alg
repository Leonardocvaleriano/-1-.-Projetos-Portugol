algoritmo "Conversao_real_dolar"

var
     reais,dolar: real

inicio
      Escreva("Me informe quantos reais você tem: ")
      Leia(reais)

      dolar <-   reais  / 5.56

      Escreval("O valor de R$",reais," convertido para dolar equivale a U$ ",dolar:4:2)
      Escreva("ATENÇÃO: Foi considerado a cotação do real de R$ 5,56.")


fimalgoritmo

